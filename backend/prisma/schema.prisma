generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  farmName  String?
  phone     String?
  role      String    @default("user")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  farms     Farm[]
  sessions  Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Farm {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  location    String?
  size        Float?
  sizeUnit    String?         @default("hectares")
  ownerId     Int
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  owner       User            @relation(fields: [ownerId], references: [id])
  inventory   InventoryItem[]
  parcels     Parcel[]
}

model Parcel {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  size        Float
  sizeUnit    String      @default("hectares")
  farmId      Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  crops       Crop[]
  livestock   Livestock[]
  farm        Farm        @relation(fields: [farmId], references: [id])
}

model Crop {
  id           Int       @id @default(autoincrement())
  name         String
  variety      String?
  plantingDate DateTime?
  harvestDate  DateTime?
  status       String    @default("planted")
  parcelId     Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  parcel       Parcel    @relation(fields: [parcelId], references: [id])
}

model Livestock {
  id        Int                     @id @default(autoincrement())
  name      String                  @db.VarChar(255)
  breed     String                  @db.VarChar(255)
  quantity  Int
  status    String                  @default("active")
  parcelId  Int
  createdAt DateTime                @default(now())
  updatedAt DateTime                @updatedAt
  age       Int?
  weight    Decimal?                @db.Decimal(10, 2)
  category  enum_Livestock_category
  parcel    Parcel                  @relation(fields: [parcelId], references: [id])
}

model InventoryItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  category    String
  quantity    Int
  unit        String
  farmId      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  farm        Farm     @relation(fields: [farmId], references: [id])
}

model Crops {
  id           Int                @id @default(autoincrement())
  name         String             @db.VarChar(255)
  variety      String             @db.VarChar(255)
  plantingDate DateTime           @db.Timestamptz(6)
  harvestDate  DateTime?          @db.Timestamptz(6)
  parcelId     Int?
  status       enum_Crops_status? @default(planned)
  createdAt    DateTime?          @db.Timestamptz(6)
  updatedAt    DateTime?          @db.Timestamptz(6)
  Parcels      Parcels?           @relation(fields: [parcelId], references: [id], onDelete: Cascade)
}

model Parcels {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(255)
  size      Decimal   @db.Decimal(10, 2)
  location  String    @db.VarChar(255)
  createdAt DateTime? @db.Timestamptz(6)
  updatedAt DateTime? @db.Timestamptz(6)
  Crops     Crops[]
}

enum enum_Crops_status {
  planned
  planting
  growing
  harvesting
  completed
}

enum enum_Livestock_category {
  bovino
  su_no   @map("suíno")
  ovino
  caprino
  av_cola @map("avícola")
  equino
  outros
}

enum enum_Livestock_status {
  ativo
  vendido
  morto
  transferido
}
