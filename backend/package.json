{
  "name": "agroxp-backend",
  "version": "1.0.0",
  "description": "Backend for AgroXP agricultural management system",
  "main": "src/server-main.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm ./src/server-main.ts",
    "dev": "nodemon --watch src --exec \"node --loader ts-node/esm ./src/server-main.ts\"",
    "prisma:dev": "nodemon src/server-prisma.ts",
    "prisma:seed": "npx ts-node prisma/seed.ts",
    "prisma:test-connection": "npx ts-node test-db-connection.ts",
    "prisma:create-db": "npx ts-node create-database.ts",
    "test": "jest",
    "test-db": "tsx src/test-db.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "prisma": "^6.16.2",
    "sequelize": "^6.32.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6"
  }
}
